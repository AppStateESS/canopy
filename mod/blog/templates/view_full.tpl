<div class="hentry box blog-full-view">
<div class="box-title">
<h1 class="entry-title">{TITLE} <!-- BEGIN unpub --><span
    class="unpublished"
>({UNPUBLISHED})</span><!-- END unpub --></h1>
<h3 class="posted-by">{POSTED_BY} <abbr class="author">{AUTHOR}</abbr></h3>
<h3 class="posted-on">{POSTED_ON} <abbr class="published"
    title="{PUBLISHED_DATE}"
>{LOCAL_DATE}</abbr></h3>
</div>
<!-- BEGIN categories -->
<div class="blog-category-links">{CATEGORIES}</div>
<!-- END categories --> <!-- BEGIN icons -->
<ul class="blog-category-icons">
    <!-- BEGIN cat-icons -->
    <li>{CAT_ICON}</li>
    <!-- END cat-icons -->
</ul>
<!-- END icons -->
<div class="box-content">
<div class="entry-summary"><!-- BEGIN image -->
<div class="entry-image">{IMAGE}</div>
<!-- END image -->{SUMMARY}</div>
<!-- BEGIN entry-content -->
<div class="entry-content">{ENTRY}</div>
<!-- END entry-content --> <!-- BEGIN edit-link -->
<div class="blog-edit">{EDIT_LINK}</div>
<!-- END edit-link --> <!-- BEGIN comments --> {COMMENTS} <!-- END comments -->
</div>
</div>
