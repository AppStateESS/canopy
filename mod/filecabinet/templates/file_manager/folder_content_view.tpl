<div id="view-window">
    <div id="type-select">{DOCUMENT_ICON} {IMAGE_ICON} {MEDIA_ICON}</div>
    <div id="folder-title">
        <span id="heading">{FOLDER_TITLE}</span>
        <span class="alt{ALT_HIGH1}">{ALT1}</span>
        <span class="alt{ALT_HIGH2}">{ALT2}</span>
        <span class="alt{ALT_HIGH3}">{ALT3}</span>
    </div>
    <div id="selection">
        <div id="item-selection"><!-- BEGIN items -->
            <div class="item {HIGHLIGHT}">
                <div>
                    {ICON}<br />
                    <span class="item-title">{TITLE}</span><br />
                    <!-- BEGIN info --><span class="item-info">{INFO}</span><br />
                    <!-- END info --> {LINKS}
                </div>
            </div>
            <!-- END items -->
        </div>
    </div>
    <div id="options">{CLOSE} {ADD_FILE} {ADD_EMBED}</div>
</div>