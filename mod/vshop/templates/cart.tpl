<div class="vshop-sidebox">
  <div class="box">
    <div class="box-title"><h1>{TITLE}</h1></div>
    <div class="box-content">
        <div align="center">
            {LABEL}<br />
            <table border="0" cellpadding="1" cellspacing="0" width="100%" style="font-size: 1em;">
                <tr>
                    <th align="left">{NAME_LABEL}</th>
                    <th align="center">{QTY_LABEL}</th>
                    <th align="left"></th>
                    <th align="left"></th>
                </tr>
            <!-- BEGIN items -->
                <tr>
                    <td align="left">{NAME}</td>
                    <td align="center">{QTY}</td>
                    <td align="left">{ADD} {SUBTRACT}</td>
                    <td align="right">{SUBTOTAL}</td>
                </tr>
            <!-- END items -->
                <tr>
                    <th align="left">{TOTAL_LABEL}</th>
                    <td align="right" colspan="3">{TOTAL}</td>
                </tr>
            </table>
        </div>
        <br />
        {CHECKOUT_LINK}<br /><br />
        {BROWSE_LINK}<br />
        {CLEAR_LINK}
    </div>
  </div>
</div>
